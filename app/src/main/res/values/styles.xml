<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MainBut">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/teal_200</item>
        <item name="backgroundTint">@color/buttonselector</item>
    </style>

    <style name="MainButDark">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/teal_700</item>

        <item name="backgroundTint">@color/buttonselectordark</item>
    </style>

    <style name="UsernameEText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:inputType">text</item>
    </style>

    <style name="MailEText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:inputType">text</item>
    </style>

    <style name="PasswordEText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:inputType">textPassword</item>
    </style>
</resources>